{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["main.ts"],
  "exclude": ["node_modules"]
}
